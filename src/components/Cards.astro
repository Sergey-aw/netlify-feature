<section class="step pb-5" w-fit>
    <h2 id={`hidden-img-${id}`} class="text-2xl hover:text-red-500 transition transform ease-in-out hover:translate-x-2 duration-300 druk"><a href={link1} class="">{title1}</a></h2>
