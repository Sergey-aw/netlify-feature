---
import Footer from "../components/footer.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';
const { title, description,home = false } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link rel="preload" href="/fonts/PacaembuVar-subset.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="/fonts/MulishVar-subset.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="/fonts/NormalidadVar-Regular.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="/fonts/Druk.ttf" as="font" type="font/truetype" crossorigin>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <link rel="icon" href="/favicon.ico" sizes="any">
  <link rel="icon" href="/icon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest" />

  <meta name="msapplication-TileColor" content="#5cebdf" />
  <meta name="theme-color" content="#e7e7e7" />
  <title>{title}</title>

  <link rel="stylesheet" href="/global.css">
  <style is:global>
  

    body {
      @apply sm:p-8;
      @apply lg:p-20;
      @apply md:p-20;
      @apply xl:p-20;
    
      max-width: 1200px;
    }
   
    .druk {
      font-family: Druk, Verdana, Geneva, Tahoma, sans-serif;
    }
    
    .maintext
    {
      font-family: Normalidad, Verdana, Geneva, Tahoma, sans-serif;
      font-weight: 100;
      font-size: 1.0rem;

    }
  </style>
</head>
<body class="text-gray-900 gray-bg">
  
  <header class="container">
    <div id="container" class="md:w-3/4 w-fit h-fit">


    {home !== true && (
    
    <h1 class="green-text text-3xl pb-5 font-sans druk uppercase">{title}</h1>
    
  )}



    {home == true && (
    
        <h1 class="green-text text-3xl pb-5 font-sans druk ">{title}</h1>
      
    )}


    <p class="description">{description}</p>
  </div>
    {home !== true && (
      <p class="pt-5 hover:text-blue-500 transition transform ease-in-out hover:-translate-x-2 duration-300 ">
        <a href="/">&larr; назад</a>
        
        
      </p>
    )}
  </header>

  <slot />
<Footer/>
</body>
</html>
